<body>

  <h1>ðŸŽ¡ Spinner Game</h1>
  <div class="pointer"></div>
  <div class="wheel-container">
    <div class="wheel" id="wheel">
      <div>50</div>
      <div>100</div>
      <div>150</div>
      <div>200</div>
      <div>0</div>
      <div>500</div>
    </div>
  </div>

  <button id="spinBtn">Spin Now</button>
  <p id="points">Total Points: 0</p>

  <div class="ads">ðŸª§ Ad Loading...</div>

  <div class="withdraw">
    <h3>ðŸ’³ Withdraw Section</h3>
    <input type="text" id="phone" placeholder="Enter your mobile number"><br>
    <button id="rechargeBtn" disabled>Recharge 30à§³ (30,000 Points)</button><br><br>
    <button id="withdrawBtn" disabled>Withdraw 50à§³ (50,000 Points)</button>
    <p id="msg"></p>
  </div>

  <script>
    const wheel = document.getElementById("wheel");
    const spinBtn = document.getElementById("spinBtn");
    const pointsDisplay = document.getElementById("points");
    const rechargeBtn = document.getElementById("rechargeBtn");
    const withdrawBtn = document.getElementById("withdrawBtn");
    const msg = document.getElementById("msg");
    let totalPoints = localStorage.getItem("points") ? parseInt(localStorage.getItem("points")) : 0;

    pointsDisplay.textContent = "Total Points: " + totalPoints;

    spinBtn.addEventListener("click", () => {
      spinBtn.disabled = true;
      const deg = Math.floor(2000 + Math.random() * 2000);
      wheel.style.transform = `rotate(${deg}deg)`;

      setTimeout(() => {
        const section = [50, 100, 150, 200, 0, 500];
        const earned = section[Math.floor(Math.random() * section.length)];
        totalPoints += earned;
        localStorage.setItem("points", totalPoints);
        pointsDisplay.textContent = "Total Points: " + totalPoints;
        alert("You earned " + earned + " points!");
        spinBtn.disabled = false;
        checkWithdrawAvailability();
      }, 4000);
    });

    function checkWithdrawAvailability() {
      rechargeBtn.disabled = totalPoints < 30000;
      withdrawBtn.disabled = totalPoints < 50000;
    }

    rechargeBtn.addEventListener("click", () => {
      const phone = document.getElementById("phone").value;
      if (!phone) return alert("Enter your mobile number!");
      msg.textContent = "ðŸ“± Recharge request sent for " + phone;
    });

    withdrawBtn.addEventListener("click", () => {
      const phone = document.getElementById("phone").value;
      if (!phone) return alert("Enter your mobile number!");
      msg.textContent = "ðŸ’¸ Withdraw request sent for " + phone;
    });

    checkWithdrawAvailability();
  </script>

